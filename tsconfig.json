{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2018",
    "baseUrl": ".",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "rootDirs": [
      "./",
      "./src",
      "./pages"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain",
    "./src"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
